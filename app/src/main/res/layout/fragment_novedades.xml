<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:orientation="vertical"
    tools:context=".ui.novedades.NovedadesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/categoryspinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/layout_cat"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/lTipoNovedad"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".7"
                        android:fontFamily="@font/aspira_black"
                        android:gravity="center_vertical"
                        android:hint="Tipo Novedad"
                        android:textColor="@color/lila_lucky"
                        android:textColorHint="@color/blanco1_bassa"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1.3"
                        android:background="@drawable/spinner_background"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/chevron_down_solid_48"
                            android:contentDescription="@string/app_name" />


                        <Spinner
                            android:id="@+id/spTipoNovedad"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:enabled="false"
                            android:fontFamily="@font/poppins_thin"
                            android:textColor="@color/negro"
                            android:tooltipText="@color/negro" />
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.6"
                    android:fontFamily="@font/aspira_black"
                    android:gravity="center|left"
                    android:hint="@string/obsv"
                    android:padding="5dp"
                    android:paddingLeft="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:textColor="@color/blanco1_bassa"
                    android:textColorHint="@color/lila_lucky" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:background="@drawable/edit_text_background"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtObservacion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:maxLength="500"
                        android:background="@null"
                        android:gravity="top"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/aspira_black"
                        android:textColorHint="@color/blanco1_bassa"
                        android:textColor="@color/blanco1_bassa" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="2">


                <ImageButton
                    android:id="@+id/ibCargarFoto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="#0000"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/cameraicon2" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.2"
                    android:background="@drawable/layout_background"
                    android:orientation="horizontal"
                    android:padding="0dp">


                    <ImageView
                        android:id="@+id/ivFoto"
                        android:layout_width="114dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center"
                        android:background="@color/gris1_bassa" />


                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/aspira_black"
                    android:gravity="center|left"
                    android:hint="Indique el Producto"
                    android:padding="5dp"
                    android:paddingLeft="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:textColor="@color/lila_lucky"
                    android:textColorHint="@color/lila_lucky" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/lSKU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="visible"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/lvSKUCode"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:fadeScrollbars="false"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        android:scrollbarSize="5dp"
                        android:scrollingCache="true"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/recyclerview_data_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="10dp"
                    android:text="@string/empty_list"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/layout_skuName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/lSKUName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#006fb6"
                        android:text="SKU Name"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_skuDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/txtDescripcionSKU"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_background"
                        android:ems="10"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="center"
                        android:hint="DescripciÃ³n del SKU"
                        android:inputType="textPersonName"

                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_registradas"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="0.6"
                    android:fontFamily="@font/aspira_black"
                    android:gravity="center"
                    android:hint="Usted tiene 1/5 novedades registradas"
                    android:padding="3dp"
                    android:paddingLeft="2dp"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:textColorHint="@color/plomo"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_active"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>