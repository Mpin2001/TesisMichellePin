<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaf0f2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="375dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="267dp"
                    android:layout_height="36dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="327dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="324dp"
                    android:layout_height="310dp"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <EditText
                        android:id="@+id/txtOperador"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@android:color/white"
                        android:ellipsize="start"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Usuario nombre y apellido"
                        android:fontFamily="@font/roboto_light"
                        android:inputType="textPersonName" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="216dp"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="69dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lPuntoVenta"
                                android:layout_width="214dp"
                                android:layout_height="37dp"
                                android:drawableLeft="@drawable/labels"
                                android:gravity="center_vertical"
                                android:text="Punto de Venta"
                                android:textColor="#919ba3"
                                android:textSize="20sp"
                                android:fontFamily="@font/roboto_medium_italic" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:layout_weight="1" />

                            <ImageButton
                                android:id="@+id/btnPdvSync"
                                android:layout_width="8dp"
                                android:layout_height="40dp"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginTop="0dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:background="@android:color/transparent"
                                android:onClick="sincronizar"
                                android:padding="5dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/sincronizar" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="69dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lProductos"
                                android:layout_width="217dp"
                                android:layout_height="37dp"
                                android:drawableLeft="@drawable/labels"
                                android:gravity="center_vertical"
                                android:text="Productos"
                                android:textColor="#919ba3"
                                android:textSize="20sp"
                                android:fontFamily="@font/roboto_medium_italic" />

                            <Space
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:layout_weight="1" />

                            <ImageButton
                                android:id="@+id/btnProductosSync"
                                android:layout_width="8dp"
                                android:layout_height="40dp"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginTop="0dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="true"
                                android:background="@android:color/transparent"
                                android:onClick="sincronizar"
                                android:padding="5dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/sincronizar" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ProgressBar
                                android:id="@+id/barra"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_marginTop="2dp"
                                android:indeterminate="true" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>