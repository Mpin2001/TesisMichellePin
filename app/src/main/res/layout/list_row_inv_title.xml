<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblSku"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@android:color/white"
            android:layout_column="0"
            android:background="@color/azul4_bassa"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblStock"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_column="0"
            android:background="@color/azul4_bassa"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblSemana"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_column="0"
            android:background="@color/azul4_bassa"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblSugerido"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@android:color/white"
            android:layout_column="0"
            android:background="@color/azul4_bassa"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCantidadSugerido"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@android:color/white"
            android:layout_column="0"
            android:background="@color/azul4_bassa"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblEntrega"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:background="@color/azul4_bassa"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lblCausal"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:background="@color/azul4_bassa"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lblDetalle"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@android:color/white"
            android:layout_column="0"
            android:background="@color/azul4_bassa"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCaducidad"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@android:color/white"
            android:layout_column="0"
            android:background="@color/azul4_bassa"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/checkGuardar"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@color/azul4_bassa"
            android:gravity="center_vertical|center_horizontal|center"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>