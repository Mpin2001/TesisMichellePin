<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/alicorp_fondo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblSku"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_column="0"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spTipoExh"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:entries="@array/comboTipoExh"
            android:fontFamily="@font/roboto_light"
            android:hint="No"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spZona"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:entries="@array/comboZona"
            android:fontFamily="@font/roboto_light"
            android:hint="Si"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/spContratada"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:entries="@array/combo_si_no"
            android:fontFamily="@font/roboto_light"
            android:hint="Cartera"
            android:inputType="textPersonName"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spCondicion"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:entries="@array/combo_condicion"
            android:fontFamily="@font/roboto_light"
            android:hint="Producto En Trastienda/Almacen"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/ibCargarFotoExhibiciones"
            android:layout_width="150px"
            android:layout_height="150px"
            android:background="#0000"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cameraicon2" />

        <!--<ImageView
            android:id="@+id/ivFotoExhibiciones"
            android:layout_width="256px"
            android:layout_height="128px"/>-->

        <CheckBox
            android:id="@+id/checkGuardar"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal|center" />

    </LinearLayout>

</LinearLayout>