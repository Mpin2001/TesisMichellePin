<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/encabezado_estado"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/estado"/>

        <TextView
            android:id="@+id/encabezado_codigo"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/codigo_st"/>

        <TextView
            android:id="@+id/encabezado_fecha"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/fecha"/>

        <TextView
            android:id="@+id/encabezado_hora"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/hora"/>

        <TextView
            android:id="@+id/encabezado_usuario"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/usuario"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/encabezado_encuesta"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="Encuesta"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/encabezado_categoria"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/categoria"
            android:visibility="gone"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblEstado"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#676666"
            android:text="@string/estado"/>

        <TextView
            android:id="@+id/lblCodigo"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/codigo_st"
            android:textColor="#676666" />

        <TextView
            android:id="@+id/lblFecha"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/fecha"
            android:textColor="#676666" />

        <TextView
            android:id="@+id/lblHora"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/hora"
            android:textColor="#676666" />

        <TextView
            android:id="@+id/lblUsuario"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/usuario"
            android:textColor="#676666"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lblEncuesta"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/categoria"
            android:textColor="#676666" />

        <TextView
            android:id="@+id/lblCategoria"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/subcategoria"
            android:textColor="#676666"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>