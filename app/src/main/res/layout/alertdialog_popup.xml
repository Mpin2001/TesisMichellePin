                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/rojo_alicorp">

                        <TextView
                            android:id="@+id/lblsegmentacionTitulo"
                            android:layout_width="0dp"
                            android:fontFamily="@font/roboto_black"
                            android:layout_height="match_parent"
                            android:layout_weight="1.6"
                            android:textColor="@color/colorWhite"
                            android:text="Segmentación"
                            android:background="@color/rojo_alicorp"/>

                        <TextView
                            android:id="@+id/lblSegmentacion"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textColor="@color/colorWhite"
                            android:text="TextView"
                            android:background="@color/gris"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/rojo_alicorp">

                        <TextView
                            android:id="@+id/lblcomprasTitulo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/roboto_black"
                            android:layout_weight="1.6"
                            android:textColor="@color/colorWhite"
                            android:text="Compras"
                            android:background="@color/rojo_alicorp"/>

                        <TextView
                            android:id="@+id/lblCompras"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:textColor="@color/colorWhite"
                            android:text="TextView"
                            android:background="@color/gris"/>
                    </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lblPortafolioTitulo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/rojo_alicorp"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_black"
                                android:padding="5dp"
                                android:text="Portafolio Prioritario" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lSKU"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ScrollView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical" >

                                        <!-- En caso de lista vacía-->
                                        <TextView
                                            android:id="@+id/data_empty"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical|center_horizontal"
                                            android:paddingLeft="@dimen/activity_horizontal_margin"
                                            android:paddingEnd="@dimen/activity_horizontal_margin"
                                            android:paddingRight="@dimen/activity_horizontal_margin"
                                            android:paddingBottom="@dimen/activity_vertical_margin"
                                            android:hint="@string/empty_list"
                                            android:visibility="gone" />

                                        <ListView
                                            android:id="@+id/listView"
                                            android:layout_width="match_parent"
                                            android:layout_height="100dp" />
                                    </LinearLayout>
                                </ScrollView>

                            </LinearLayout>

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblPopTitulo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_black"
                            android:text="POP Sugerido"
                            android:textColor="@color/rojo_alicorp"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lSKUPop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >

                                    <!-- En caso de lista vacía-->
                                    <TextView
                                        android:id="@+id/data_empty2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical|center_horizontal"
                                        android:paddingLeft="@dimen/activity_horizontal_margin"
                                        android:paddingEnd="@dimen/activity_horizontal_margin"
                                        android:paddingRight="@dimen/activity_horizontal_margin"
                                        android:paddingBottom="@dimen/activity_vertical_margin"
                                        android:hint="@string/empty_list"
                                        android:visibility="gone" />

                                    <ListView
                                        android:id="@+id/listViewPop"
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp" />
                                </LinearLayout>
                            </ScrollView>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lblTareas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/roboto_black"
                            android:text="¡Recuerda revisar el módulo de tareas asignadas!" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>