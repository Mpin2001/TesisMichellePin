<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblSku"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtventa"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="S. Actual"
            android:inputType="number"
            android:maxLength="5"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtsouv"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="Sugerido"
            android:inputType="number"
            android:maxLength="100"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spCausal"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:entries="@array/causal" />

        <EditText
            android:id="@+id/txtDetalle"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="D. Otros"
            android:inputType="text"
            android:maxLength="100"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!--<FrameLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:maxLength="10"
                android:textColor="@color/negro" />

            <ImageButton
                android:id="@+id/btnFechaProd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/edit_text_background"
                android:src="@android:drawable/ic_menu_my_calendar" />
        </FrameLayout>-->

        <EditText
            android:id="@+id/txtFecha"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="01/01/1900"
            android:inputType="number|date"
            android:maxLength="10"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkGuardar"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal|center" />

    </LinearLayout>

</LinearLayout>