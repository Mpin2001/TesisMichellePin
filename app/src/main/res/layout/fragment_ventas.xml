        <LinearLayout
            android:id="@+id/linearLayoutImpulso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/lNombreImp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:fontFamily="@font/aspira_black"
                    android:gravity="center_vertical"
                    android:text="Nombre del Impulsador(a)"
                    android:textColor="@color/lila_lucky"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1.3"
                    android:background="@drawable/spinner_background"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtNombreImp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gris_buscadores"
                        android:ems="10"
                        android:fontFamily="@font/poppins_thin"
                        android:gravity="center"
                        android:hint=""
                        android:maxLength="300"
                        android:inputType="textPersonName"
                        android:textColor="@color/negro"
                        android:textColorHint="@color/negro"
                        android:textSize="14sp" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/llFechaVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/aspira_black"
                    android:gravity="center_vertical"
                    android:text="Fecha"
                    android:textColor="@color/blanco"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/txtFecha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|start"
                        android:paddingLeft="12dp"
                        android:enabled="false"
                        android:textColor="@color/blanco1_bassa" />

                    <ImageButton
                        android:id="@+id/btnFecha"
                        android:layout_width="39dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|end"
                        android:backgroundTint="@color/blanco"
                        android:src="@android:drawable/ic_menu_my_calendar" />
                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

