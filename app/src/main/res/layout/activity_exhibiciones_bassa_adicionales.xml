<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorPos"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/lila_lucky"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/tipoherramientaspinner"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:id="@+id/layout_tipo_herramienta"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edittext_border"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:hint="@string/tipo_cab"
                    android:padding="5dp"
                    android:paddingLeft="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:textColor="#000000"
                    android:textColorHint="#0055B7" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/spTipoHerramienta"
                        android:layout_width="158dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:enabled="false"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/drop_down"
                        android:contentDescription="@string/app_name" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tipoherramientaspinner"
            android:id="@+id/categoryspinner">

            <LinearLayout
                android:id="@+id/layout_operator"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edittext_border"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:hint="@string/tipo_exh"
                    android:padding="5dp"
                    android:paddingLeft="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:textColor="#000000"
                    android:textColorHint="#0055B7" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/spTipoExh"
                        android:layout_width="158dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:enabled="false"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/drop_down"
                        android:contentDescription="@string/app_name" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryspinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/subcatspinner">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edittext_border"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:hint="@string/fabricante"
                    android:padding="5dp"
                    android:paddingLeft="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:textColor="#000000"
                    android:textColorHint="#0055B7" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/spFabExh"
                        android:layout_width="181dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:enabled="false"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/drop_down"
                        android:contentDescription="@string/app_name" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/brandspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subcatspinner"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layout_brand"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_border"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:hint="@string/cat"
                    android:padding="5dp"
                    android:paddingLeft="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:textColor="#000000"
                    android:textColorHint="#0055B7" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spCategoryExhi"
                        android:layout_width="181dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:enabled="false"
                        android:padding="5dp"
                        android:textColor="#000000" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/drop_down"
                        android:contentDescription="@string/app_name" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brandspinner"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tipoNovedad"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layout_tipo_novedad"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edittext_border"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:hint="@string/tipo_novedad"
                    android:padding="5dp"
                    android:paddingLeft="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:textColor="#000000"
                    android:textColorHint="#0055B7" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/spTipoNovedad"
                        android:layout_width="181dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:padding="5dp"
                        android:textColor="#000000"
                        android:enabled="false"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/drop_down"
                        android:contentDescription="@string/app_name" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/zonaspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tipoNovedad"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layout_subcat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_border"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/lblzona"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center|left"
                    android:hint="@string/zonaexh"
                    android:padding="5dp"
                    android:paddingLeft="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:textColor="#000000"
                    android:textColorHint="#0055B7" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".9"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spZona"
                        android:layout_width="146dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:enabled="false"
                        android:padding="5dp"
                        android:textColor="#000000" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/drop_down"
                        android:contentDescription="@string/app_name" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/checklayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zonaspinner"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/personalizacionLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_border"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/lblpersonal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center|left"
                    android:hint="@string/personalizacion"
                    android:padding="5dp"
                    android:paddingLeft="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:textColor="#000000"
                    android:textColorHint="#0055B7" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".9"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/estrellaLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/personalizacionLayout"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_border"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/lblestrella"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center|left"
                    android:hint="@string/estrella"
                    android:padding="5dp"
                    android:paddingLeft="2dp"
                    android:textAppearance="?android:attr/textAppearanceSmallInverse"
                    android:textColor="#000000"
                    android:textColorHint="#0055B7" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".9"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/r2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/siguiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checklayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <LinearLayout
                android:id="@+id/layout_siguiente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnSiguiente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:background="#ED4399"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:text="Siguiente" />
            </LinearLayout>
        </RelativeLayout>



        <!-- ListView-->
        <ScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checklayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone">


            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- En caso de lista vacÃ­a-->
                    <TextView
                        android:id="@+id/recyclerview_data_emptyexh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|center_horizontal"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingEnd="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:text="@string/empty_list" />

                    <ListView
                        android:id="@android:id/list"
                        android:layout_width="323dp"
                        android:layout_height="375dp"
                        android:layout_marginLeft="15dp" />

                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>



    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
