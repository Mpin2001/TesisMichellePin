<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pdf"
    android:background="@color/colorWhite"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            >
            <!--   android:orientacion="horizontal" -->


            <ImageView
                android:id="@+id/imgEvaluacion"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:foregroundGravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:srcCompat="@drawable/evaluacion" />

            <LinearLayout
                android:layout_width="246dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-3dp"
                android:layout_marginEnd="-37dp"
                android:layout_toStartOf="@+id/imgTest2"
                android:layout_toEndOf="@id/imgEvaluacion"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/imgEvaluacion"
                    android:layout_toRightOf="@+id/imgEvaluacion"
                    android:orientation="vertical">>

                    <TextView
                        android:id="@+id/tv_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:maxLength="110"
                        android:text="ENCUESTA"
                        android:textColor="@color/lila_lucky"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:maxLength="110"
                        android:text="Descripcion"
                        android:textColor="@color/colorBlack"
                        android:textSize="11sp" />

<!--                    <TextView
                        android:id="@+id/tv_fecha_inicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FECHA INICIO: 21/07/2022"
                        android:textColor="@color/gris"
                        android:textSize="10sp" />


                    <TextView
                        android:id="@+id/tv_fecha_limite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FECHA LIMITE: 21/07/2022"
                        android:textColor="@color/gris"
                        android:textSize="10sp" />


                    <TextView
                        android:id="@+id/tv_minutos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_lucky"
                        android:textSize="10sp" />-->


                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/imgTest2"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="46dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="4dp"
                android:foregroundGravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:srcCompat="@drawable/icon_start" />


            <!--     <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginEnd="6dp"
                     android:layout_marginRight="6dp"
                     android:text="ACTIVO"
                     android:textSize="20sp"
                     android:textStyle="bold"
                     android:layout_alignParentRight="true"
                     android:layout_alignParentEnd="true" /> -->


        </RelativeLayout>
