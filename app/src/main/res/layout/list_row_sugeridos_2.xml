<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/alicorp_fondo"
    android:gravity="top"
    android:layout_gravity="top"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lblSku"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#000000"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"/>

<!--    <TextView-->
<!--        android:id="@+id/lblSku"-->
<!--        android:layout_width="150dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:hint="@string/marcas"-->
<!--        android:paddingStart="2dp"-->
<!--        android:paddingEnd="2dp"-->
<!--        android:paddingBottom="10dp"-->
<!--        android:textAlignment="textStart"-->
<!--         />-->

    <Switch
        android:id="@+id/swQuiebre"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:padding="5dp"
        android:textOff="NO"
        android:textOn="SI"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <EditText
        android:id="@+id/txt_cantidad_disponible"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:hint="@string/candisp"
        android:inputType="number"
        android:maxLength="7"
        android:paddingEnd="2dp"
        android:paddingStart="2dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"  />

    <Switch
        android:id="@+id/swSugerido"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:gravity="center|start"
        android:padding="5dp"
        android:textOff="NO"
        android:textOn="SI"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <EditText
        android:id="@+id/txt_cantidad_sugerida"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:hint="Sugerido"
        android:inputType="number"
        android:maxLength="5"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="14sp"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/txt_observaciones"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:inputType="text"
        android:hint="@string/observaciones"
        android:maxLength="50"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="14sp"
        android:visibility="visible"/>

    <Spinner
        android:id="@+id/spEntrega"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:entries="@array/entrega" />

    <ImageButton
        android:id="@+id/ibCargarFotoShare"
        android:layout_width="96px"
        android:layout_height="96px"
        android:background="#0000"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cameraicon2"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivFotoExhibiciones"
        android:layout_width="0dp"
        android:layout_height="200px"
        android:layout_weight=".3"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/checkPresencia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.20"
        android:gravity="center_vertical|center_horizontal|center"
        android:visibility="gone"/>

</LinearLayout>