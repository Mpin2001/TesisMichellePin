        </LinearLayout>

        <TextView
            android:id="@+id/lblPreguntaM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:hint="Pregunta a evaluar"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_light"/>

        <LinearLayout
            android:id="@+id/check_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/check_opta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>
            <CheckBox
                android:id="@+id/check_optb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>
            <CheckBox
                android:id="@+id/check_optc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>
            <CheckBox
                android:id="@+id/check_optd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>
            <CheckBox
                android:id="@+id/check_opte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
