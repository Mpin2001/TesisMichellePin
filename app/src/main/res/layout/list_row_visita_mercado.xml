<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutPreg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginVertical="3dp"
        android:layout_marginHorizontal="5dp">

        <TextView
            android:id="@+id/lblCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="@string/categoria"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:textColor="@color/negro"
            android:fontFamily="@font/roboto_bold"/>

        <View
            android:id="@+id/dividerCategoria"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/layoutPregImagen"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.jsibbold.zoomage.ZoomageView
                android:id="@+id/myZoomageViewU"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:zoomage_restrictBounds="false"
                app:zoomage_animateOnReset="true"
                app:zoomage_autoResetMode="UNDER"
                app:zoomage_autoCenter="true"
                app:zoomage_zoomable="true"
                app:zoomage_translatable="true"
                app:zoomage_minScale="0.6"
                app:zoomage_maxScale="8"
                android:layout_marginVertical="5dp"
                app:srcCompat="@drawable/ic_camera"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/lblPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:hint="Pregunta a evaluar"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <RadioGroup
                android:id="@+id/rgCodifica"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <RadioButton
                    android:id="@+id/rba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light_italic"
                    android:text="@string/si" />

                <RadioButton
                    android:id="@+id/rbb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light_italic"
                    android:text="@string/no" />
                <RadioButton
                    android:id="@+id/rbc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light_italic"
                    android:text="@string/no" />
                <RadioButton
                    android:id="@+id/rbd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light_italic"
                    android:text="@string/no"
                    android:visibility="visible"/>
                <RadioButton
                    android:id="@+id/rbe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_light_italic"
                    android:text="@string/no"
                    android:visibility="visible"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/layoutFoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_weight="3"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/ibCargarFoto"
                    android:layout_width="200px"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:scaleType="fitCenter"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/cameraicon2"/>

                <ImageView
                    android:id="@+id/ivFoto"
                    android:layout_width="250px"
                    android:layout_height="250px"/>

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/txtComentario1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:hint="@string/comentario"
            android:inputType="textMultiLine"
            android:textSize="13sp"
            android:maxLength="500"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
