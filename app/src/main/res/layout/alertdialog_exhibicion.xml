<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#eceff1"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lIndicadores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LLENAR INDICADORES"
                android:background="#006fb6"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="310dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="304dp"
                    android:layout_height="299dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/lTipoExh"
                                    android:layout_width="253dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/labels"
                                    android:fontFamily="@font/roboto_medium_italic"
                                    android:gravity="center_vertical"
                                    android:text="Tipo de Exh"
                                    android:textColor="#919ba3"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <Space
                                    android:layout_width="164dp"
                                    android:layout_height="38dp"
                                    android:layout_weight="1" />

                                <Spinner
                                    android:id="@+id/spTipoExh"
                                    android:layout_width="291dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:entries="@array/comboTipoExh"
                                    android:fontFamily="@font/roboto_light"
                                    android:hint="No"
                                    android:inputType="textPersonName"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/lZona"
                                    android:layout_width="167dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/labels"
                                    android:fontFamily="@font/roboto_medium_italic"
                                    android:gravity="center_vertical"
                                    android:text="Zona"
                                    android:textColor="#919ba3"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <Space
                                    android:layout_width="78dp"
                                    android:layout_height="38dp"
                                    android:layout_weight="1" />

                                <Spinner
                                    android:id="@+id/spZona"
                                    android:layout_width="204dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:entries="@array/comboZona"
                                    android:fontFamily="@font/roboto_light"
                                    android:hint="Si"
                                    android:inputType="textPersonName"
                                    android:textSize="18sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/lContratada"
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/labels"
                                    android:fontFamily="@font/roboto_medium_italic"
                                    android:gravity="center_vertical"
                                    android:text="Contratada"
                                    android:textColor="#919ba3"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="38dp"
                                    android:layout_weight="1" />

                                <Spinner
                                    android:id="@+id/spContratada"
                                    android:layout_width="126dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:entries="@array/combo_si_no"
                                    android:fontFamily="@font/roboto_light"
                                    android:hint="Cartera"
                                    android:inputType="textPersonName"
                                    android:textSize="18sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="43dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/lCondicion"
                                    android:layout_width="173dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:drawableLeft="@drawable/labels"
                                    android:fontFamily="@font/roboto_medium_italic"
                                    android:gravity="center_vertical"
                                    android:text="Condicion"
                                    android:textColor="#919ba3"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <Space
                                    android:layout_width="84dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" />

                                <Spinner
                                    android:id="@+id/spCondicion"
                                    android:layout_width="209dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:entries="@array/combo_condicion"
                                    android:fontFamily="@font/roboto_light"
                                    android:hint="Producto En Trastienda/Almacen"
                                    android:inputType="textPersonName" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageButton
                                    android:id="@+id/ibCargarFotoExhibiciones"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="#0000"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@drawable/cameraicon2" />

                                <Space
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/ivFotoExhibiciones"
                                    android:layout_width="129dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:baselineAligned="false" />

                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>