<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/estado"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/codigo"/>
        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/fecha"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/hora"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/user"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/categoria"/>


        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/descripcion"
            android:textColor="#000000" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="Status Actividad"
            android:textColor="#000000" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="Implementación POP"
            android:textColor="#000000"
            android:visibility="gone"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="Mecanica"
            android:textColor="#000000" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="@string/comentario"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblEstado"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:ems="5"
            android:background="@null"
            android:padding="5dp"
            android:textColor="#676666"
            android:text="@string/estado"/>

        <TextView
            android:id="@+id/lblCodigo"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/codigo"
            android:textColor="#676666" />

        <TextView
            android:id="@+id/lblFecha"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/fecha"
            android:textColor="#676666" />

        <TextView
            android:id="@+id/lblHora"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/hora"
            android:textColor="#676666" />

        <TextView
            android:id="@+id/lblUsuario"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/user"
            android:textColor="#676666" />

        <TextView
            android:id="@+id/lblCategoria"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/categoria"
            android:textColor="#676666" />

        <TextView
            android:id="@+id/lblDescripcion"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/descripcion"
            android:textColor="#676666" />

        <TextView
            android:id="@+id/lblStatus"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="Status Actividad"
            android:textColor="#676666" />

        <TextView
            android:id="@+id/lblImplementacion"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="Implementación POP"
            android:textColor="#676666"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lblMecanica"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="Mecanica"
            android:textColor="#676666"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/lblComentario"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="5"
            android:padding="5dp"
            android:text="@string/comentario"
            android:textColor="#676666" />

    </LinearLayout>

</LinearLayout>