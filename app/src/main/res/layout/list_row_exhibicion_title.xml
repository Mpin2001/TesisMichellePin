<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblSku"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@android:color/white"
            android:layout_column="0"
            android:background="@color/alicorp_rojo"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblTipoexh"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:background="@color/alicorp_rojo"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblZona"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:background="@color/alicorp_rojo"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lblContratada"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:background="@color/alicorp_rojo"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblCondicion"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:background="@color/alicorp_rojo"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblFoto"
            android:layout_width="128px"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@android:color/white"
            android:layout_column="0"
            android:background="@color/alicorp_rojo"
            android:textAlignment="center"
            android:textStyle="bold" />

        <!--<TextView
            android:id="@+id/lvlVista"
            android:layout_width="256px"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="@android:color/white"
            android:layout_column="0"
            android:background="@color/alicorp_rojo"
            android:textAlignment="center"
            android:textStyle="bold" />-->

        <TextView
            android:id="@+id/checkGuardar"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@color/alicorp_rojo"
            android:gravity="center_vertical|center_horizontal|center"/>

    </LinearLayout>

</LinearLayout>