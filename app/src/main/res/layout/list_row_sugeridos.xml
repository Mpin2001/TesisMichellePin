<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alicorp_fondo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFotoProducto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/lblSku"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:gravity="center|start"
            android:hint="@string/marcas"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="11dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:visibility="visible"/>

        <Switch
            android:id="@+id/swQuiebre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_column="0"
            android:gravity="center|start"
            android:padding="5dp"
            android:textOff="NO"
            android:textOn="SI"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <EditText
            android:id="@+id/txt_cantidad_disponible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center|start"
            android:hint="@string/caras"
            android:inputType="number"
            android:maxLength="7"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Switch
            android:id="@+id/swSugerido"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_column="0"
            android:gravity="center|start"
            android:padding="5dp"
            android:textOff="NO"
            android:textOn="SI"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <EditText
            android:id="@+id/txt_cantidad_sugerida"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:hint=""
            android:inputType="number"
            android:maxLength="5"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="visible"/>

        <EditText
            android:id="@+id/txt_observaciones"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:inputType="text"
            android:maxLength="50"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="14sp"
            android:visibility="visible"/>

        <Spinner
            android:id="@+id/spEntrega"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/entrega" />

        <CheckBox
            android:id="@+id/checkGuardar"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal|center"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>