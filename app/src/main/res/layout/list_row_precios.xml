<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/lblEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="PENDIENTE"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/blanco"
            android:background="@color/azul2_bassa"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblSku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:textAlignment="center"
            android:gravity="center|start"
            android:hint="Sku"
            android:padding="5dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- PRIMERA FILA: TÍTULOS (3 columnas) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- PVP -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="PVP"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="11sp"/>

            <!-- PVA -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="PVA"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="11sp"/>

            <!-- PRECIO CON DESCUENTO (CheckBox + EditText juntos) -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="PRECIO CON DESCUENTO"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="9sp" />

            <!-- PVM (OCULTO) -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="PVM"
                android:textAlignment="center"
                android:textStyle="bold"
                android:visibility="gone"/>

            <!-- FOTO (OCULTO) -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="FOTO"
                android:textAlignment="center"
                android:textStyle="bold"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- SEGUNDA FILA: CONTROLES DE ENTRADA (3 columnas) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <!-- PVP - EditText -->

            <!-- PVA - EditText -->

            <!-- PRECIO CON DESCUENTO - CheckBox y EditText JUNTOS -->
            <EditText
                android:id="@+id/txt_precio_regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:enabled="false"

                android:gravity="center"
                android:hint="$"
                android:inputType="numberDecimal"
                android:padding="8dp"
                android:textColor="#7D7F7D" />

            <EditText
                android:id="@+id/txt_precio_promocion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"

                android:gravity="center"
                android:hint="$"
                android:inputType="numberDecimal"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginHorizontal="2dp"
                >

                <!-- CheckBox primero -->
                <CheckBox
                    android:id="@+id/chkPrecioDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/plomo"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"/>

                <!-- EditText para monto del descuento -->
                <EditText
                    android:id="@+id/txt_monto_descuento"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="2dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:hint="$"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- PVM (OCULTO) -->
            <EditText
                android:id="@+id/txt_precio_mayorista"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="p. unit. x caja"
                android:textAlignment="center"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/edittext_border"
                android:visibility="gone"/>

            <!-- FOTO (OCULTO) -->
            <ImageButton
                android:id="@+id/ibCargarPrecios"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/cameraicon2"
                android:padding="8dp"
                android:layout_marginHorizontal="2dp"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- TERCERA FILA: IMAGEN Y BOTÓN -->
        <ImageView
            android:id="@+id/ivPrecios"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/checkGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:text="Guardar"/>

    </LinearLayout>

</LinearLayout>